{% assign hc_storefront_status = shop.metafields.helpfulcrowd.global.storefront_status %}
{% if hc_storefront_status == "active" %}
  {% assign hc_rating = product.metafields.helpfulcrowd.product.rating | plus: 0 %}

  <span class="hc-stars">
    {% for i in (1..5) %}
    	{% assign next_value = hc_rating | plus: 1 %}
    	{% if hc_rating >= i %}
        <svg class="hc-icon   hc-icon--star hc-icon--lg" height="1em" viewBox="0 0 1792 1792" width="1em" xmlns="http://www.w3.org/2000/svg"><g><path d="M1728 647q0 22-26 48l-363 354 86 500q1 7 1 20 0 21-10.5 35.5t-30.5 14.5q-19 0-40-12l-449-236-449 236q-22 12-40 12-21 0-31.5-14.5t-10.5-35.5q0-6 2-20l86-500-364-354q-25-27-25-48 0-37 56-46l502-73 225-455q19-41 49-41t49 41l225 455 502 73q56 9 56 46z" /><rect class="hc-icon__transparent-background"></rect></g></svg>
    	{% elsif next_value > i and hc_rating > 0 %}
        <svg class="hc-icon   hc-icon--star-half hc-icon--lg" height="1em" viewBox="0 0 1792 1792" width="1em" xmlns="http://www.w3.org/2000/svg"><g><path d="M1250 957l257-250-356-52-66-10-30-60-159-322v963l59 31 318 168-60-355-12-66zm452-262l-363 354 86 500q5 33-6 51.5t-34 18.5q-17 0-40-12l-449-236-449 236q-23 12-40 12-23 0-34-18.5t-6-51.5l86-500-364-354q-32-32-23-59.5t54-34.5l502-73 225-455q20-41 49-41 28 0 49 41l225 455 502 73q45 7 54 34.5t-24 59.5z" /><rect class="hc-icon__transparent-background"></rect></g></svg>
    	{% else %}
    		<svg class="hc-icon   hc-icon--star-o hc-icon--lg" height="1em" viewBox="0 0 1792 1792" width="1em" xmlns="http://www.w3.org/2000/svg"><g><path d="M1201 1004l306-297-422-62-189-382-189 382-422 62 306 297-73 421 378-199 377 199zm527-357q0 22-26 48l-363 354 86 500q1 7 1 20 0 50-41 50-19 0-40-12l-449-236-449 236q-22 12-40 12-21 0-31.5-14.5t-10.5-35.5q0-6 2-20l86-500-364-354q-25-27-25-48 0-37 56-46l502-73 225-455q19-41 49-41t49 41l225 455 502 73q56 9 56 46z" /><rect class="hc-icon__transparent-background"></rect></g></svg>
    	{% endif %}
    {% endfor %}
  </span>
{% endif %}
