      }
      @include mediaQuery($max, $mobile) {
        @include grid-item(6);
      }

      text-align: left;

      &:hover,
      &:focus {
        figure {
          .card__image {
            @include transform(scale(1.15, 1.15) translateZ(0));
          }
        }
        figcaption {
          opacity: 1;
        }
      }

      figure {
        position: relative;
        overflow: hidden;
        a {
          display: block;
        }
        .card__image {
          @include transition(transform 2s ease-in-out);
          @include transform(scale(1.02, 1.02) translateZ(0));
