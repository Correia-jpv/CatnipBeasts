        }
      }
      margin: 10px 0;
    }
    @include mediaQuery($max, $mobile) {
      &.box-last {
        margin-bottom: 0px;
        > *:first-child,
        > *:last-child {
          border-top: 0px;
          border-bottom: 0px;
          padding-top: 0px;
          padding-bottom: 0px;
        }
      }
      > *:last-child {
        border-bottom: 1px solid mix($footerTitleTextColor, $footerBackgroundColor, 30%);
        padding-bottom: 20px;
      }
